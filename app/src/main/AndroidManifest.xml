<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.intro.fancyvideomaker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyAcpplication"
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FancyIntroVideoMaker">

        <activity android:name="com.facebook.ads.AudienceNetworkActivity" android:hardwareAccelerated="true" />

        <activity
            android:name=".activities.MyCreationActivity"
            android:exported="true" />
        <activity
            android:name=".activities.VideoPlayerActivity"
            android:exported="true" />
        <activity
            android:name=".activities.VideoMaker_Activity"
            android:exported="true" />
        <activity
            android:name=".activities.TitleListActivity"
            android:exported="true" />
        <activity
            android:name=".activities.BackgroundListActivity"
            android:exported="true" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />

        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>